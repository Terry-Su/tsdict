{
  "include": [
    "src/**/*",
    "../shared/__typings__/**/*",
],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@shared/*": [
        "../shared/*"
      ]
    },
    "module": "esnext",
		"target": "esnext",
		"jsx": "react",
    "allowJs": true,
    "outDir": "../../build/",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "skipLibCheck": true,
  }
}
