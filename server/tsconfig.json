{
  "include": [
    "src/**/*",
    "../shared/__typings__/**/*",
    "config.ts",
    "scripts/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*",
      ],
    },
    "module": "commonJS",
		"target": "es5",
		"jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [ "es2016", "dom" ],
    "esModuleInterop": true,
    "types": [ "express", "jasmine", "quill" ]
  }
}
